@model List<EindtestASPMVC.Models.WinkelmandItem>
@{
    ViewBag.Title = "Winkelmandje";
}

@Html.ActionLink("Afrekenen", "Afrekenen")

<h2>Winkelmandje</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Titel</th>
            <th class="rechts">Prijs</th>
            <th class="rechts">Verwijderen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var film in Model)
        {
            <tr>
                <td class="col-md-3">@film.Titel</td>
                <td class="col-md-1 rechts">@Html.DisplayFor(f => film.Prijs)</td>
                <td class="col-md-1 rechts">@Html.ActionLink("Verwijderen", "FilmVerwijderen", new { filmNummer = film.FilmNr })</td>
            </tr>
        }
    </tbody>
</table>
@Html.ActionLink("Verder winkelen", "Index")
