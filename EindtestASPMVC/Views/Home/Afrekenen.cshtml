@model List<EindtestASPMVC.Models.WinkelmandItem>
@{
    ViewBag.Title = "Afrekenen";
}

<h2>Afrekenen</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="font-weight-bold">
            <th class="text-center">Titel</th>
            <th>Prijs</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var film in Model)
        {
            <tr>
                <td class="col-md-3 text-center">@film.Titel</td>
                <td class="col-md-1">@Html.DisplayFor(f => film.Prijs)</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td class="text-center">Totaal:</td>
            <td>@(String.Format("{0:€ #,##0.00}", @ViewBag.teBetalen))</td>
        </tr>
    </tfoot>
</table>

<p>wordt gefactureerd aan:</p>
<p>@ViewBag.Voornaam @ViewBag.Naam</p>
<p>@ViewBag.Straat</p>
<p>@ViewBag.Postcode @ViewBag.Gemeente</p>

