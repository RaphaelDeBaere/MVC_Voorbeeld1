@{
    ViewBag.Title = "Aanmelden";
}

<form method="get" action="~/Home/ValidatieKlant" class="form-horizontal">
    <br/>
    <div class="form-group">
        <label class="col-md-2">Naam</label>
        <div class="col-md-10">
            <input name="naam" id="naam" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2">Postcode</label> 
        <div class="col-md-10">
            <input name="postcode" id="postcode" type="number" class="form-control"/>
        </div>
    </div>
    <input type="submit" name="knopValiderenAanmelden" value="Aanmelden" />
</form>


